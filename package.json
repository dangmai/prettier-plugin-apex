    "@types/node": "20.14.8",
    "@types/semver": "7.7.1",
    "del-cli": "7.0.0",
    "nx": "22.3.3",
    "prettier": "3.8.1",
    "prettier-plugin-java": "2.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "semver": "7.7.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "zx": "8.8.5"
  },
