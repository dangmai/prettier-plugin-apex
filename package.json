    "prettier": "3.6.2",
    "prettier-plugin-java": "2.7.5",
    "prettier-plugin-organize-imports": "4.2.0",
    "semver": "7.7.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "zx": "8.8.1"
  },
